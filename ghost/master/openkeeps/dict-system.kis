#Layer.Name、Layer.Versionをコンソールへ反映===================================
# SHIORI/3.0によるID問い合わせ

resource.name : $(
	.split @vername $(.ver) "/";
	.get @vername[0];
	if $(.size Layer.Name) $(foreach @i Layer.Name "+"${@i});
)

resource.version : $(
	.split @vername $(.ver) "/";
	.get @vername[1];
	if $(.size Layer.Version) $(foreach @i Layer.Version "/"${@i});
)

resource.craftman : $(
	.ver author;
	if $(.size Layer.Author) $(foreach @i Layer.Author "&"${@i});
)

